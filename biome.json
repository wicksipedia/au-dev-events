{
	"$schema": "https://biomejs.dev/schemas/2.0.x/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"lineWidth": 80
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double",
			"trailingCommas": "all",
			"semicolons": "always"
		}
	},
	"css": {
		"parser": {
			"tailwindDirectives": true
		},
		"formatter": {
			"enabled": false
		},
		"linter": {
			"enabled": false
		}
	},
	"files": {
		"includes": [
			"**",
			"!dist",
			"!.astro",
			"!node_modules",
			"!.claude",
			"!**/*.astro"
		]
	}
}
