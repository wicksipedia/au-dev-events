---
import { formatDateRange } from "@/utils/formatDate";

interface Props {
	startDate: Date;
	endDate: Date;
	city: string;
	state: string;
	venue?: string;
	cost: string;
}

const { startDate, endDate, city, state, venue, cost } = Astro.props;
---

<div class="flex flex-col gap-1.5 text-xs text-foreground/70">
	<!-- Date -->
	<div class="flex items-center gap-1.5">
		<svg class="h-3.5 w-3.5 shrink-0" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
			<rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
			<line x1="16" y1="2" x2="16" y2="6"></line>
			<line x1="8" y1="2" x2="8" y2="6"></line>
			<line x1="3" y1="10" x2="21" y2="10"></line>
		</svg>
		<span>{formatDateRange(startDate, endDate)}</span>
	</div>

	<!-- Location -->
	<div class="flex items-center gap-1.5">
		<svg class="h-3.5 w-3.5 shrink-0" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
			<path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
			<circle cx="12" cy="10" r="3"></circle>
		</svg>
		<span>{venue ? `${venue}, ${city}, ${state}` : `${city}, ${state}`}</span>
	</div>

	<!-- Cost -->
	<div class="flex items-center gap-1.5">
		<svg class="h-3.5 w-3.5 shrink-0" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
			<line x1="12" y1="1" x2="12" y2="23"></line>
			<path d="M17 5H9.5a3.5 3.5 0 0 0 0 7h5a3.5 3.5 0 0 1 0 7H6"></path>
		</svg>
		<span>{cost}</span>
	</div>
</div>
