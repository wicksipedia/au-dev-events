---
interface Props {
	href: string;
	label: string;
	external?: boolean;
}

const { href, label, external = false } = Astro.props;
---

<a
	href={href}
	class="inline-flex items-center gap-2 rounded-lg border border-accent/30 bg-accent/10 px-4 py-2 text-sm font-semibold text-accent transition-colors hover:border-accent/60 hover:bg-accent/20"
	{...(external ? { target: "_blank", rel: "noopener noreferrer" } : {})}
>
	{label}
	{
		external && (
			<svg
				class="h-3.5 w-3.5"
				viewBox="0 0 24 24"
				fill="none"
				stroke="currentColor"
				stroke-width="2"
				stroke-linecap="round"
				stroke-linejoin="round"
			>
				<path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6" />
				<polyline points="15 3 21 3 21 9" />
				<line x1="10" y1="14" x2="21" y2="3" />
			</svg>
		)
	}
</a>
