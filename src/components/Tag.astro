---
interface Props {
	tag: string;
	size?: "sm" | "md";
}

const { tag, size = "sm" } = Astro.props;

const sizeClasses = {
	sm: "px-2 py-0.5 text-[0.65rem]",
	md: "px-3 py-1 text-xs",
} as const;
---

<a
	href={`${import.meta.env.BASE_URL}/tags/${tag}/`}
	class:list={[
		"inline-flex items-center rounded-full border border-accent/30 bg-accent/5 font-medium text-accent transition-colors",
		"hover:border-accent/60 hover:bg-accent/15",
		sizeClasses[size],
	]}
>
	{tag}
</a>
