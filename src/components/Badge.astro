---
interface Props {
	variant: "free" | "workshops";
}

const { variant } = Astro.props;

const styles = {
	free: "border-emerald-500/30 bg-emerald-500/10 text-emerald-700 dark:text-emerald-400",
	workshops: "border-accent/30 bg-accent/10 text-accent",
} as const;

const labels = {
	free: "Free",
	workshops: "Workshops",
} as const;

// Note: dark: classes don't work with data-theme approach, using CSS variables instead
---

<span
	class:list={[
		"inline-flex items-center rounded-full border px-2 py-0.5 text-[0.65rem] font-semibold uppercase tracking-wider",
		styles[variant],
	]}
>
	{labels[variant]}
</span>
